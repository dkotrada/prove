{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.15.1/.schema/devbox.schema.json",
  "packages": ["dbmate@2.28.0", "dbeaver-bin@25.1.4"],
  "shell": {
    "init_hook": [
      "echo 'Init DATABASE_URL environment variable for dbmate.' > /dev/null",
      "export DATABASE_URL='postgres://postgres:postgres@localhost:5432/prove?sslmode=disable'"
    ],
    "scripts": {
      "test": ["echo \"Error: no test specified\" && exit 1"]
    }
  }
}
